<Application x:Class="SeaBattleWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:seaBattleWpf="clr-namespace:SeaBattleWPF"
             x:Name="Application">


    <Application.Resources>
        <ResourceDictionary>
            <seaBattleWpf:ViewModelLocator x:Key="ViewModelLocator"/>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Styles/Buttons.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Texts.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Colors.xaml"></ResourceDictionary>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
