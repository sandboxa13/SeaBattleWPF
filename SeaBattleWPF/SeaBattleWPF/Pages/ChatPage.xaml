<local:BasePage x:Class="SeaBattleWPF.Pages.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SeaBattleWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ChatPage"
      DataContext="{Binding ChatViewModel , Source={StaticResource ViewModelLocator}}">

    <local:BasePage.Resources>
        <Style x:Key="MyHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>
        <Style x:Key="ItemStyle" TargetType="{x:Type ListViewItem}">
            <Setter Property="Foreground" Value="{StaticResource TextForgeGroundLightBrush}"></Setter>
        </Style>
    </local:BasePage.Resources>

    <Grid Margin="10">
        <ListView  BorderThickness="0" ItemContainerStyle="{StaticResource ItemStyle}" x:Name="listView" Background="Transparent">
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource MyHeaderStyle}">
                    <GridViewColumn DisplayMemberBinding="{Binding Message}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</local:BasePage>
